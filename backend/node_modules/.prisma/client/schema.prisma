generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:fatec@localhost:3306/atvFinal?schema=public"
}

model Disciplina {
  id           Int                     @id @default(autoincrement())
  nome         String
  cargaHoraria Int
  ementa       String
  alunos       AlunoDisciplinaStatus[]
  cursos       Curso[]
}

model Curso {
  id          Int          @id @default(autoincrement())
  nome        String
  descricao   String
  duracao     Int
  horasTotais Int?
  alunos      Aluno[]
  disciplinas Disciplina[]
}

model Aluno {
  id          Int                     @id @default(autoincrement())
  nome        String
  cpf         String                  @unique
  email       String                  @unique
  curso       Curso?                  @relation(fields: [cursoId], references: [id])
  cursoId     Int?
  ativo       Boolean                 @default(true)
  disciplinas AlunoDisciplinaStatus[]
}

model AlunoDisciplinaStatus {
  id           Int        @id @default(autoincrement())
  aluno        Aluno      @relation(fields: [alunoId], references: [id])
  alunoId      Int
  disciplina   Disciplina @relation(fields: [disciplinaId], references: [id])
  disciplinaId Int
  status       String
  dataInicio   DateTime   @default(now())
}
