generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Professor {
  id          Int          @id @default(autoincrement())
  nome        String
  cpf         String      @unique
  email       String      @unique
  titulo      String    
  disciplinas Disciplina[]
}

model Disciplina {
  id           Int     @id @default(autoincrement())
  nome         String
  cargaHoraria Int
  ementa       String
  alunos       AlunoDisciplinaStatus[]
  cursos       Curso[]
  professor    Professor @relation(fields: [professorId], references: [id])
  professorId  Int
}

model Curso {
  id          Int          @id @default(autoincrement())
  nome        String
  horasTotais Int?
  alunos      Aluno[]
  disciplinas Disciplina[]
}

model Aluno {
  id          Int          @id @default(autoincrement())
  nome        String
  cpf         String      @unique
  email       String      @unique
  curso       Curso?       @relation(fields: [cursoId], references: [id])
  cursoId     Int?
  ativo       Boolean      @default(true)
  disciplinas AlunoDisciplinaStatus[]
}

model AlunoDisciplinaStatus {
  id          Int       @id @default(autoincrement())
  aluno       Aluno     @relation(fields: [alunoId], references: [id])
  alunoId     Int
  disciplina  Disciplina @relation(fields: [disciplinaId], references: [id])
  disciplinaId Int
  status      String   
  dataInicio  DateTime @default(now())
}
